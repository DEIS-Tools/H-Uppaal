<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.*?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.*?>
<?import SW9.presentations.TagPresentation?>
<fx:root xmlns:fx="http://javafx.com/fxml/1"
         xmlns="http://javafx.com/javafx/8.0.76-ea"
         type="Group"
         fx:controller="SW9.controllers.LocationController"
         fx:id="root">

    <Group onMouseEntered="#hiddenAreaEntered"
           onMouseExited="#hiddenAreaExited">

        <Circle fx:id="hiddenAreaCircle" radius="50"/>

        <TagPresentation fx:id="invariantTag" translateX="100"/>

    </Group>

    <TagPresentation fx:id="nameTag" translateX="100"/>

    <Group fx:id="scaleContent"
           onMouseEntered="#mouseEntered"
           onMouseExited="#mouseExited"
           onMousePressed="#mousePressed"
           onMouseReleased="#mouseReleased"
           onMouseDragged="#mouseDragged">

        <!-- Circular location -->
        <Circle fx:id="circle" radius="20" strokeType="INSIDE" opacity="0"/>
        <Circle fx:id="circleShakeIndicator" radius="10" mouseTransparent="true" fill="white" opacity="0"/>

        <!-- The transformable location shape -->
        <Path fx:id="locationShape" strokeType="INSIDE"/>

        <Group fx:id="shakeContent">
            <StackPane fx:id="finalIndicator" mouseTransparent="true" translateX="-11" translateY="-11">
                <Line strokeWidth="2" style="-fx-stroke: white;" startX="-10" startY="-10" endX="10" endY="10"/>
                <Line strokeWidth="2" style="-fx-stroke: white;" startX="10" startY="-10" endX="-10" endY="10"/>
            </StackPane>

            <!-- The initial indicator -->
            <Path fx:id="initialIndicator" strokeType="INSIDE" strokeWidth="2"  style="-fx-stroke: -white; -fx-fill: transparent;" mouseTransparent="true"/>
        </Group>

    </Group>

    <StackPane fx:id="propertiesPane"
               style="-fx-background-color:white;"
               visible="false"
               layoutY="-10" layoutX="-80"
               prefWidth="160">

        <VBox>
            <JFXTextField fx:id="nameField"/>

            <TextArea fx:id="invariantField"
                      prefHeight="70"
                      styleClass="caption"
                      wrapText="true"
                      promptText="No invariant"/>
        </VBox>

    </StackPane>

</fx:root>