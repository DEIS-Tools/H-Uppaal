<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.*?>
<fx:root xmlns:fx="http://javafx.com/fxml/1"
         xmlns="http://javafx.com/javafx/8.0.76-ea"
         type="Group"
         fx:controller="SW9.controllers.LocationController"
         fx:id="root"
         onMouseEntered="#mouseEntered" onMouseExited="#mouseExited" onMousePressed="#mousePressed">

    <!-- Circular location -->
    <Circle fx:id="circle" radius="20" strokeType="INSIDE"/>
    <Circle fx:id="circleShakeIndicator" radius="10" mouseTransparent="true" fill="white" opacity="0"/>

    <!-- Square location -->
    <Rectangle fx:id="rectangle" width="40" height="40" strokeType="INSIDE" translateX="-20" translateY="-20"/>
    <Rectangle fx:id="rectangleShakeIndicator" mouseTransparent="true" fill="white" opacity="0"/>

    <!-- Hexagon location -->
    <Path fx:id="hexagon" strokeType="INSIDE" translateX="-20" translateY="-20"/>
    <Path fx:id="hexagonShakeIndicator" strokeType="INSIDE" translateX="-20" translateY="-20" mouseTransparent="true"
          fill="white" opacity="0"/>

    <Group fx:id="shakeContent">
        <StackPane fx:id="finalIndicator" mouseTransparent="true" translateX="-11" translateY="-11">
            <Line strokeWidth="2" style="-fx-stroke: white;" startX="-10" startY="-10" endX="10" endY="10"/>
            <Line strokeWidth="2" style="-fx-stroke: white;" startX="10" startY="-10" endX="-10" endY="10"/>
        </StackPane>

        <Circle fx:id="initialIndicator" strokeType="INSIDE" strokeWidth="2"
                style="-fx-stroke: -white; -fx-fill: transparent;" radius="15" mouseTransparent="true"/>
    </Group>

    <Label fx:id="nameLabel" styleClass="subhead" mouseTransparent="true"/>

</fx:root>