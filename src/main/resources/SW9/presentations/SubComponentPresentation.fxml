<?xml version="1.0" encoding="UTF-8"?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.shape.Rectangle?>
<fx:root xmlns:fx="http://javafx.com/fxml/1"
         xmlns="http://javafx.com/javafx/8.0.76-ea"
         type="StackPane"
         fx:id="root"
         layoutX="80"
         layoutY="80"
         fx:controller="SW9.controllers.SubComponentController">

    <Rectangle fx:id="background" fill="#ffffff"/>

    <BorderPane fx:id="frame">
        <top>
            <BorderPane fx:id="toolbar">
                <left>
                    <JFXTextField fx:id="identifier" styleClass="sub-caption" translateY="1"/>
                </left>
                <right>
                    <Label fx:id="originalComponent" styleClass="sub-caption" translateY="1"/>
                </right>
            </BorderPane>
        </top>

        <center>
            <Label wrapText="true" styleClass="caption" mouseTransparent="true" style="-fx-padding: 0 40 0 40"
                   text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque lectus odio, dapibus eget leo at, ornare pellentesque purus. Nam imperdiet mattis semper. Nullam urna ex, venenatis quis lacus at, ultrices ornare mauris."/>
        </center>
    </BorderPane>

    <Line fx:id="line1"/>
    <Line fx:id="line2"/>
    <Pane fx:id="defaultLocationsContainer" pickOnBounds="false"/>

</fx:root>