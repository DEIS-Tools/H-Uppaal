<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import SW9.model_canvas.ModelCanvas?>
<StackPane xmlns="http://javafx.com/javafx/8.0.76-ea"
           id="stackpane">

    <ModelCanvas id="model_canvas"
                 prefHeight="Infinity"
                 prefWidth="Infinity"/>

    <BorderPane id="status_bar"
                styleClass="cyan-900"
                prefHeight="20"
                maxHeight="20">
        <left>
            <StackPane id="status_bar_left">
                <Label id="status_bar_title" textFill="white" style="-fx-padding: 5 5 5 5"/>
            </StackPane>
        </left>

        <center>
            <HBox id="status_bar_middle"/>
        </center>

        <right>
            <HBox id="status_bar_right"/>
        </right>
    </BorderPane>

</StackPane>

